@model IEnumerable<SweetShop.Models.OrderDetail>

@{
    ViewBag.Title = "OrderDetails";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<h2>Order Details <a href="/Adm_Reports/Index" class="btn btn-primary pull-right float-right"> Go Back</a> </h2>
<hr />
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Order.OrderID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Order.OrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>

        </tr>
    }

</table>
