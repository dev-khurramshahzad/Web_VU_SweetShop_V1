@using SweetShop.Models
@{ 
    User user = null;
    if (Session["LoggedInUser"] != null)
    {
        user = (User)Session["LoggedInUser"];
    }
}
<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>Smart Dairy & Sweet Shop</title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <meta name="keywords"
          content="Baking Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!--// Meta tag Keywords -->
    <!-- Custom-Files -->
    <link rel="stylesheet" href="~/Content/User/css/bootstrap.css">
    <!-- Bootstrap-CSS -->
    <link rel="stylesheet" href="~/Content/User/css/style.css" type="text/css" media="all" />
    <!-- Style-CSS -->
    <link href="~/Content/User/css/font-awesome.min.css" rel="stylesheet">
    <!-- Font-Awesome-Icons-CSS -->
    <!-- //Custom-Files -->
    <!-- Web-Fonts -->
    <link href="//fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i&amp;subset=latin-ext,vietnamese"
          rel="stylesheet">
    <!-- //Web-Fonts -->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>


</head>

<body>
    @if (TempData["Message"] != null && (string)TempData["Message"] != "No")
    {
        <script type="text/javascript">
                window.onload = function () {
                    Swal.fire(
                        '@TempData["State"]',
                        '@TempData["Message"]',
                        '@TempData["State"]')
                };
        </script>
    }
    <!-- header -->
    <header id="home">
        <!-- top-bar -->
        <div class="top-bar py-2 bg-li">
            <div class="container">
                <div class="row">
                    <div class="col-xl-6 col-lg-5 top-social-w3pvt-am mt-lg-1 mb-md-0 mb-1 text-lg-left text-center">
                        <div class="row">
                            <div class="col-xl-4 col-6 header-top_w3layouts border-right">
                                <p class="text-bl">
                                    <span class="fa fa-map-marker mr-2"></span> Virtual University
                                </p>
                            </div>
                            <div class="col-xl-4 col-6 header-top_w3layouts text-md-right">
                                <p class="text-bl">
                                    <span class="fa fa-phone mr-2"></span>+92 300 0000000
                                </p>
                            </div>
                            <div class="col-xl-4"></div>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-7 top-social-w3pvt-am mt-lg-0 mt-2">
                        <div class="row">
                            <div class="col-6 top-w3layouts">
                               
                            </div>
                            <div class="col-6 border-left mt-lg-1 socila-brek text-md-right text-center">
                                <!-- social icons -->
                                <ul class="top-right-info">

                                    <li>
                                        <a href="/Home/Login" class="btn btn-danger btn-sm">
                                            <i class="fa fa-lock"> </i> Admin
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/Home/Login" class="btn btn-primary btn-sm">
                                            <i class="fa fa-lock"> </i> Manager
                                        </a>
                                    </li>

                                </ul>
                                <!-- //social icons -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- //top-bar -->
    <!-- header 2 -->
    <!-- navigation -->
    <div class="main-top">
        <div class="container d-lg-flex justify-content-between align-items-center">
            <!-- logo -->
            <h1 class="logo-style-res float-left">
                <a class="navbar-brand" href="/Home/">
                    <img src="~/Content/User/images/logo.png" alt="" class="img-fluid logo-img mt-1">Sweet Shop
                </a>
            </h1>
            <!-- //logo -->
            <!-- nav -->
            <div class="nav_w3ls mx-lg-auto">
                <nav>
                    <label for="drop" class="toggle">Menu</label>
                    <input type="checkbox" id="drop" />
                    <ul class="menu mx-lg-auto">
                        <li><a href="/Home/" class="active">Home</a></li>
                        <li><a href="/Home/Categories" class="">Categories</a></li>
                        <li><a href="/Home/Items" class="">Sweets</a></li>
                        <li><a href="/Home/ShoppingCart" class="">Cart</a></li>
                        <li><a href="/Home/">Contact</a></li>
                    </ul>
                </nav>
            </div>
            <!-- //nav -->
            <!-- dwn -->
            <div class="text-center">
                @if (Session["LoggedInUser"] == null)
                {
                    <a href="/Home/Login" class="login-button-2 text-uppercase text-wh mt-lg-0 mt-2">Login</a>
                }
                else
                {
                    <a href="/Home/Logout" class="login-button-2 text-uppercase text-wh mt-lg-0 mt-2">Logout: @user.Name</a>
                }
            </div>
            <!-- //dwn -->
        </div>
    </div>
    <!-- //navigation -->
    <!-- //header 2 -->
    @RenderBody()
    <!-- footer -->
    <hr />
    <footer>
        <div class="container">
            <!-- newsletter -->
           
            <!-- //newsletter -->
            <div class="py-5">
                <div class="row footer-grids pt-lg-3 pb-4">
                    <div class="col-lg-4 col-4 footer-grid mt-5">
                        <h3 class="mb-sm-4 mb-3 pb-3">Smart Dairy & Sweet Shop</h3>
                        <p class="text-white">
                            Smart Dairy and Sweet shop is very
                            convenient for these customers and it
                            will also be beneficial for dairy and
                            sweet shop managers as well who can
                            easily find their customers and increase
                            their dairy business sales by providing
                            quality dairy and sweet products to
                            customers.
                        </p>
                          
                        </div>
                        <div class="col-lg-4  col-6 footer-grid mt-5">
                            <h3 class="mb-sm-4 mb-3 pb-3">Home</h3>
                            <ul class="list-unstyled">
                                <li>
                                    <a href="/Home">Index</a>
                                </li>
                                <li>
                                    <a href="/Home/Categories/">Categories</a>
                                </li>
                                <li>
                                    <a href="/Home/Items">Sweet Items</a>
                                </li>
                                <li>
                                    <a href="/Home/ShoppingCart">Shopping Cart</a>
                                </li>
                                <li>
                                    <a href="/Home/Login">Login / Register</a>
                                </li>
                            </ul>
                        </div>


                        <div class="col-lg-4 col-4 footer-grid mt-5">
                            <h3 class="mb-sm-4 mb-3 pb-3">Contact Us</h3>
                            <ul class="list-unstyled">
                                <li>
                                    +92 (300) 0000000
                                </li>
                                <li>
                                    <a href="mailto:info@example.com">info@samrtdairyandsweetshop.com</a>
                                </li>
                            </ul>
                        </div>
                    </div>
            </div>
        </div>
    </footer>
    <!-- //footer -->
    <!-- copyright -->
    <div class="copy_right position-relative">
        <p class="text-center text-wh py-sm-3 py-3">
            © 2019 Samrt Dairy & Sweet Shop | All rights reserved | Developed By: 
            <a href="#" target="_blank">Nouman</a>
        </p>
        <!-- move top icon -->
        <a href="#home" class="move-top text-center">
            <span class="fa fa-level-up" aria-hidden="true"></span>
        </a>
        <!-- //move top icon -->
    </div>
    <!-- //copyright -->


</body>

</html>