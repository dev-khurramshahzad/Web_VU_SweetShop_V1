
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    input {
        margin: 8px;
    }
</style>


<br />
<br />
<div class="row">
    <div class=" col-md-4">
    </div>
    <div class="col-md-4">
        <div class="card card-header-pills">
            <div class="card-header">
                <h2 class="text-center">Login</h2>
            </div>
            <div class="card-body">
                <form action="/Home/LoginVerify" method="post">
                    <input type="hidden" name="return_url" value="@ViewBag.return_url" />
                    <input type="email" placeholder="Email" name="email" required class="form-control" />
                    <input type="password" placeholder="Password" name="password" required class="form-control" />
                    
                    <div>
                        <input type="radio" value="Customer" checked name="type" />
                        <label class="form-check-label">Customer</label>

                        <input type="radio" value="Manager" name="type"  />
                        <label class="form-check-label">Manager</label>

                        <input type="radio" value="Admin" name="type"  />
                        <label class="form-check-label">Admin</label>
                        <br />
                    </div>

                    <input type="submit" value="Login" class="btn btn-primary " />
                </form>

            </div>
            <div class="card-footer">
                Don't have an account?
                <a href="/Home/Register">Register Now</a>
            </div>
        </div>
    </div>
</div>

